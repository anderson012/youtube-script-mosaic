{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "target": "es6",
    "module": "NodeNext",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.css.ts", "src/**/*.js"]
}
